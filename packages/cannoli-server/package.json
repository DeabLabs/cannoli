{
  "name": "@deablabs/cannoli-server",
  "version": "1.0.0",
  "description": "A companion server for the Cannoli Obsidian plugin that enables MCP and other AI features.\nJoin our Discord server to get involved in the development process: https://discord.gg/wzayNxpxvR",
  "main": "dist/index.js",
  "type": "module",
  "private": false,
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "bin": {
    "@deablabs/cannoli-server": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./rpc": {
      "import": "./dist/rpc.js",
      "types": "./dist/rpc.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --treeshake --clean && tsup src/rpc.ts --format esm --treeshake --experimental-dts && tsup src/schemas.ts --format esm --treeshake --experimental-dts",
    "dev": "tsup src/index.ts --format esm --watch --onSuccess \"node dist/index.js\"",
    "typecheck": "tsc --noEmit",
    "inspect": "npx -y @modelcontextprotocol/inspector"
  },
  "keywords": [
    "cannoli",
    "obsidian",
    "plugin",
    "mcp",
    "ai"
  ],
  "author": "Anthony Powell <powell.anthonyd@proton.me>",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "7.52.3",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "0.4.3",
    "@modelcontextprotocol/sdk": "1.9.0",
    "@scalar/hono-api-reference": "0.8.0",
    "hono": "4.7.6",
    "hono-openapi": "0.4.6",
    "mcp-proxy": "2.12.0",
    "nanoid": "5.0.7",
    "raw-body": "3.0.0",
    "remeda": "1.61.0",
    "tiny-invariant": "^1.3.1",
    "tsup": "^8.4.0",
    "zod": "3.23.8",
    "zod-openapi": "4.2.4"
  }
}
