{
	"name": "@deablabs/cannoli-server",
	"version": "1.0.0",
	"description": "A companion server for the Cannoli Obsidian plugin that enables MCP and other AI features.\nJoin our Discord server to get involved in the development process: https://discord.gg/wzayNxpxvR",
	"main": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*",
		"package.json"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsup src/index.ts --format esm --treeshake --clean",
		"dev": "tsup src/index.ts --format esm --watch --onSuccess \"node dist/index.js\"",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^22.14.0",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.0",
		"@hono/zod-validator": "0.4.3",
		"@scalar/hono-api-reference": "0.8.0",
		"hono": "4.7.6",
		"hono-openapi": "0.4.6",
		"nanoid": "5.0.7",
		"remeda": "1.61.0",
		"tiny-invariant": "^1.3.1",
		"tsup": "^8.4.0",
		"zod": "3.23.8",
		"zod-openapi": "4.2.4"
	}
}
